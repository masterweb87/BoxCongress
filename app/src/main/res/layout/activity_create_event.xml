<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorCreateEvent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/textColorBackground"
    tools:context=".create_event.CreateEventActivity">

    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarContent"
        android:paddingTop="@dimen/padding_top_appbar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:id="@+id/mainToolbar"
            android:background="@color/toolBarBackground"
            app:layout_scrollFlags="scroll|enterAlways"
            app:theme="@style/AppTheme.NoActionBar"
            app:popupTheme="@style/AppTheme.NoActionBar.Submenu">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollCreateEvent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/createFormLayout"
        android:padding="@dimen/padding_event_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/create_event_sublayout_padding"
            android:id="@+id/titleLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelEventName"
                android:text="@string/event_name"
                android:textSize="@dimen/create_event_label"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:id="@+id/editEventName"
                android:inputType="text"
                android:textColor="@color/textColorContent"
                android:textSize="@dimen/create_event_input"
                android:layout_below="@id/labelEventName" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/create_event_sublayout_padding"
            android:id="@+id/typeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelEventType"
                android:text="@string/event_type"
                android:textSize="@dimen/create_event_label"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:id="@+id/listEventType"
                android:prompt="@string/event_selector_prompt"
                android:spinnerMode="dialog"
                android:layout_below="@id/labelEventType" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/event_type"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:paddingTop="@dimen/create_event_spinner_arrow"
                android:src="@mipmap/ic_keyboard_arrow_down_black_24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/create_event_sublayout_padding"
            android:id="@+id/startDateLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelStartDate"
                android:text="@string/event_startdate"
                android:textSize="@dimen/create_event_label"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="@dimen/create_event_date_input"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:id="@+id/inputStartDate"
                android:textSize="@dimen/create_event_label"
                android:textStyle="bold"
                android:layout_below="@+id/labelStartDate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelStartTime"
                android:text="@string/event_starttime"
                android:textSize="@dimen/create_event_label"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/create_event_between_date_time"
                android:layout_marginStart="@dimen/create_event_between_date_time"
                android:layout_toEndOf="@+id/labelStartDate"
                android:layout_toRightOf="@+id/labelStartDate"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:id="@+id/inputStartTime"
                android:textSize="@dimen/create_event_label"
                android:textStyle="bold"
                android:layout_below="@+id/labelStartTime"
                android:layout_alignStart="@+id/labelStartTime"
                android:layout_alignLeft="@+id/labelStartTime"
                android:layout_toEndOf="@+id/inputStartDate"
                android:layout_toRightOf="@+id/inputStartDate"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/create_event_sublayout_padding"
            android:id="@+id/endDateLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelEndDate"
                android:text="@string/event_enddate"
                android:textSize="@dimen/create_event_label"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="@dimen/create_event_date_input"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:id="@+id/inputEndDate"
                android:textSize="@dimen/create_event_label"
                android:textStyle="bold"
                android:layout_below="@+id/labelEndDate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelEndTime"
                android:text="@string/event_endtime"
                android:textSize="@dimen/create_event_label"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/create_event_between_end_date_time"
                android:layout_marginStart="@dimen/create_event_between_end_date_time"
                android:layout_toEndOf="@+id/labelEndDate"
                android:layout_toRightOf="@+id/labelEndDate"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:id="@+id/inputEndTime"
                android:textSize="@dimen/create_event_label"
                android:textStyle="bold"
                android:layout_below="@+id/labelEndTime"
                android:layout_alignStart="@+id/labelEndTime"
                android:layout_alignLeft="@+id/labelEndTime"
                android:layout_toEndOf="@+id/inputEndDate"
                android:layout_toRightOf="@+id/inputEndDate"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/create_event_sublayout_padding"
            android:id="@+id/locationLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelLocation"
                android:text="@string/event_location"
                android:textSize="@dimen/create_event_label"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:id="@+id/autoCompleteLocation"
                android:inputType="textAutoComplete"
                android:textColor="@color/textColorContent"
                android:textSize="@dimen/create_event_input"
                android:layout_below="@id/labelLocation" />

            <fragment
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_event_map_height"
                android:name="com.google.android.gms.maps.MapFragment"
                android:id="@+id/locationMap"
                android:layout_below="@+id/autoCompleteLocation" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/create_event_sublayout_padding"
            android:id="@+id/descriptionLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelDescription"
                android:text="@string/event_description"
                android:textSize="@dimen/create_event_label"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:id="@+id/inputDescription"
                android:gravity="top|start"
                android:lines="3"
                android:maxLines="6"
                android:inputType="textMultiLine"
                android:textColor="@color/textColorContent"
                android:textSize="@dimen/create_event_input"
                android:layout_below="@id/labelDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/create_event_sublayout_padding"
            android:id="@+id/submitButtonsLayout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/submitCreateEvent"
                android:background="@drawable/create_submit_background"
                android:text="@string/event_submit"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_event_blank_space"
            android:layout_marginBottom="@dimen/create_event_sublayout_padding"
            android:id="@+id/blankSpaceLayout">
        </RelativeLayout>

    </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
