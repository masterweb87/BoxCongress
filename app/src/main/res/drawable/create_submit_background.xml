<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle" >
            <padding
                android:right="@dimen/padding_image_background"
                android:top="@dimen/padding_image_background"
                android:left="@dimen/padding_image_background"
                android:bottom="@dimen/padding_image_background">
            </padding>

            <solid
                android:color="@color/colorAccent">
            </solid>

            <corners
                android:radius="@dimen/event_card_corner_radius" >
            </corners>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle" >
            <padding
                android:right="@dimen/padding_image_background"
                android:top="@dimen/padding_image_background"
                android:left="@dimen/padding_image_background"
                android:bottom="@dimen/padding_image_background">
            </padding>

            <solid
                android:color="@color/buttonPressed">
            </solid>

            <corners
                android:radius="@dimen/event_card_corner_radius" >
            </corners>
        </shape>
    </item>
</selector>